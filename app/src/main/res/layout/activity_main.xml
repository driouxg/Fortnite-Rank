<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/background_light"
  tools:context="com.dryoxapps.fortnite_rank.controller.MainActivity">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
      android:id="@+id/segmentedButtonGroup"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_margin="10dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toTopOf="@+id/textView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:sbg_animateSelector="bounce"
      app:sbg_animateSelectorDuration="500"
      app:sbg_backgroundColor="#bf9ed4"
      app:sbg_dividerColor="#ad7fc6"
      app:sbg_dividerPadding="10dp"
      app:sbg_dividerSize="1dp"
      app:sbg_position="0"
      app:sbg_radius="2dp"
      app:sbg_ripple="true"
      app:sbg_rippleColor="#ad7fc6"
      app:sbg_selectorColor="#ad7fc6"
      app:sbg_selectorTextColor="@android:color/white"
      app:sbg_shadow="true"
      app:sbg_shadowElevation="3dp"
      app:sbg_shadowMargin="4dp">

        <Button
          android:id="@+id/txtPC"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="PC"
          android:textAllCaps="true"/>

        <Button
          android:id="@+id/txtXbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="Xbox"
          android:textAllCaps="true"/>

        <Button
          android:id="@+id/txtPSN"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="PSN"
          android:textAllCaps="true"/>
    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <TextView
      android:id="@+id/textView"
      android:layout_width="199dp"
      android:layout_height="105dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:gravity="center_vertical|center_horizontal"
      android:text="Fortnite Rank"
      android:textColor="@color/Logo_Color"
      android:textSize="36sp"
      app:layout_constraintBottom_toTopOf="@+id/searchName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/segmentedButtonGroup"/>

    <EditText
      android:id="@+id/searchName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:ems="10"
      android:hint="Player Name"
      android:inputType="textPersonName"
      android:textAlignment="center"
      android:textColor="@color/Logo_Color"
      android:textColorHighlight="@color/Logo_Color"
      android:textColorHint="@color/Secondary_Color"
      android:textColorLink="@color/Secondary_Color"
      app:layout_constraintBottom_toTopOf="@+id/searchButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
      android:id="@+id/searchButton"
      android:layout_width="212dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@color/Secondary_Color"
      android:onClick="SearchForPlayer"
      android:text="Search"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/background_light"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/background_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/searchName"/>

</android.support.constraint.ConstraintLayout>
