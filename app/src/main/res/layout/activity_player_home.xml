<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/background_light"
  tools:context="com.dryoxapps.fortnite_rank.controller.PlayerHomeActivity">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
      android:id="@+id/segmentedButtonGroup"
      android:layout_width="match_parent"
      android:layout_height="47dp"
      android:layout_margin="10dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toTopOf="@+id/playerName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:sbg_animateSelector="bounce"
      app:sbg_animateSelectorDuration="500"
      app:sbg_backgroundColor="#bf9ed4"
      app:sbg_dividerColor="#ad7fc6"
      app:sbg_dividerPadding="10dp"
      app:sbg_dividerSize="1dp"
      app:sbg_position="0"
      app:sbg_radius="2dp"
      app:sbg_ripple="true"
      app:sbg_rippleColor="#ad7fc6"
      app:sbg_selectorColor="#ad7fc6"
      app:sbg_selectorTextColor="@android:color/white"
      app:sbg_shadow="true"
      app:sbg_shadowElevation="3dp"
      app:sbg_shadowMargin="4dp">

        <Button
          android:id="@+id/txtOverall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="Overall"
          android:textAllCaps="true"/>

        <Button
          android:id="@+id/txtSOLO"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="SOLO"
          android:textAllCaps="true"/>

        <Button
          android:id="@+id/txtDUO"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="DUO"
          android:textAllCaps="true"/>

        <Button
          android:id="@+id/txtSQUAD"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="10dp"
          android:text="SQUAD"
          android:textAllCaps="true"/>
    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <TextView
      android:id="@+id/playerName"
      android:layout_width="207dp"
      android:layout_height="85dp"
      android:layout_marginStart="8dp"
      android:gravity="center_vertical"
      android:text="TextView"
      android:textColor="@color/Logo_Color"
      android:textSize="30sp"
      app:layout_constraintBottom_toTopOf="@+id/scrollView2"
      app:layout_constraintEnd_toStartOf="@+id/profileRank"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/segmentedButtonGroup"/>
    <ImageView
      android:id="@+id/profileRank"
      android:layout_width="73dp"
      android:layout_height="79dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/scrollView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/playerName"
      app:layout_constraintTop_toBottomOf="@+id/segmentedButtonGroup"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@android:color/transparent"/>


    <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="316dp"
      android:layout_height="335dp"
      android:layout_weight="1"
      android:scrollbars="none"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/playerName">
        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical">
            <TableLayout
              android:id="@+id/statsTable"
              android:layout_width="342dp"
              android:layout_height="455dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.69"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/playerName">

                <TableRow
                  android:layout_width="match_parent"
                  android:layout_gravity="fill_horizontal"
                  android:minHeight="50px">
                    <ImageView
                      android:id="@+id/statKdImage"
                      android:layout_width="50dp"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      app:srcCompat="@android:color/transparent"/>
                    <TextView
                      android:id="@+id/statKdName"
                      android:layout_width="84dp"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="Kd"/>
                    <TextView
                      android:id="@+id/statKdVal"
                      android:layout_width="42dp"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="TextView"/>
                </TableRow>
                <TableRow
                  android:layout_width="match_parent"
                  android:minHeight="50px">
                    <TextView
                      android:id="@+id/statKillsName"
                      android:layout_width="match_parent"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="Kills"/>
                    <TextView
                      android:id="@+id/statKillsVal"
                      android:layout_width="match_parent"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="TextView"/>
                    <ImageView
                      android:id="@+id/statKillsImage"
                      android:layout_width="10dp"
                      android:layout_height="50dp"
                      android:gravity="center_vertical"
                      app:srcCompat="@android:color/transparent"/>
                </TableRow>
                <TableRow
                  android:layout_width="match_parent"
                  android:minHeight="50px">
                    <TextView
                      android:id="@+id/statWinsName"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="Wins"/>
                    <TextView
                      android:id="@+id/statWinsVal"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="TextView"/>
                    <ImageView
                      android:id="@+id/statWinsImage"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      app:srcCompat="@android:color/transparent"/>
                </TableRow>
                <TableRow
                  android:layout_width="match_parent"
                  android:minHeight="50px">
                    <TextView
                      android:id="@+id/statKpgName"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="Kpg"/>
                    <TextView
                      android:id="@+id/statKpgVal"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      android:gravity="center_vertical"
                      android:text="TextView"/>
                    <ImageView
                      android:id="@+id/statKpgImage"
                      android:layout_width="wrap_content"
                      android:layout_height="50px"
                      app:srcCompat="@android:color/transparent"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
